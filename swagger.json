{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Video API"
  },
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/video/{id}": {
      "get": {
        "description": "Get a video by ID",
        "produces": [
          "video/mp4"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the video to retrieve",
            "required": true,
            "type": "integer"
          },
          {
            "name": "range",
            "in": "header",
            "description": "The byte range to retrieve",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "file"
            }
          },
          "416": {
            "description": "Invalid byte range"
          }
        }
      }
    },
    "/video/{id}/data": {
      "get": {
        "description": "Get metadata for a video by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the video to retrieve metadata for",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "$ref": "#/definitions/VideoMetadata"
            }
          }
        }
      }
    },
    "/video/{id}/poster": {
      "get": {
        "description": "Get a thumbnail image for a video by ID",
        "produces": [
          "image/jpeg"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the video to retrieve the thumbnail for",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "file"
            }
          }
        }
      }
    },
    "/video/{id}/gif": {
      "get": {
        "description": "Get a GIF image for a video by ID",
        "produces": [
          "image/gif"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the video to retrieve the GIF for",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "file"
            }
          }
        }
      }
    },
    "/videos": {
      "get": {
        "description": "Get metadata for all videos",
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/VideoMetadata"
              }
            }
          }
        }
      }
    }
 
  }}